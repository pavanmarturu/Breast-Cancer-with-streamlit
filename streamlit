# Streamlit App
import streamlit as st
import pandas as pd
import pickle

# Load the saved machine learning model
with open('svm_model.pkl', 'rb') as model_file:
    loaded_model = pickle.load(model_file)

# Other Streamlit code
st.header('Breast Cancer Detection App')

